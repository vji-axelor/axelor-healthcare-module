<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid name="animal-detail-grid" title="Animal Detail"
    model="com.axelor.apps.healthcare.db.AnimalDetail">
    <field name="animalName"/>
    <field name="species"/>
    <field name="breed"/>
    <field name="gender"/>
    <field name="age"/>
    <field name="status"/>
    <field name="lastVisitDate"/>
    <field name="nextDueServices"/>
  </grid>

  <form name="animal-detail-form" title="Animal Detail"
    model="com.axelor.apps.healthcare.db.AnimalDetail" width="large">


    <panel name="mainPanel">
      <panel name="imagePanel" colSpan="2">
        <field name="animalPicture" showTitle="false" widget="Image" colSpan="12">
          <viewer>
            <![CDATA[
            		<>
     					{id && <Image src={$image('id', 'content')} style={{ width: "80%" }}></Image>}
     					{!id && _parent.partnerTypeSelect != 2 && <Image src="img/company-default.jpg" style={{ width: "80%" }}></Image>}
     					{!id && _parent.partnerTypeSelect == 2 && _parent.titleSelect == 1 && <Image src="img/partner-m-default.png" style={{ width: "80%" }}></Image>}
     					{!id && _parent.partnerTypeSelect == 2 && _parent.titleSelect == 2 && <Image src="img/partner-w-default.png" style={{ width: "80%" }}></Image>}
     					{!id && _parent.partnerTypeSelect == 2 && (_parent.titleSelect > 2 || !_parent.titleSelect) && <Image src="img/partner-default.png" style={{ width: "80%" }}></Image>}
					</>
					]]>
          </viewer>
        </field>
      </panel>
      <panel name="generalInfoPanel" colSpan="10">
        <field name="animalName" colSpan="3"/>
        <field name="species" colSpan="3"/>
        <field name="breed" colSpan="3"/>
        <field name="dateOfBirth" colSpan="3"/>

        <field name="age" colSpan="3"/>
        <field name="gender" colSpan="3"/>
        <field name="weight" colSpan="3"/>
        <field name="colorMarkings" colSpan="3"/>
      </panel>
    </panel>

    <panel name="mainPanel2">
      <field name="animalName"/>
      <field name="microchipNumber"/>
      <field name="microchipDate"/>
      <field name="status"/>
      <field name="lastVisitDate"/>
      <field name="nextDueServices"/>
      <field name="medicalNotes" widget="text-area"/>
      <field name="allergies" widget="text-area"/>
      <field name="currentMedications" widget="text-area"/>
      <field name="behaviorNotes" widget="text-area"/>
    </panel>

  </form>
</object-views>
