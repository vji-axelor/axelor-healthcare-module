<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_7.0.xsd">

  <module name="healthcare" package="com.axelor.apps.healthcare.db"/>

  <entity name="BillingInformation">

    <string name="billingReference" title="Billing Reference" namecolumn="true"/>
    <date name="serviceDate" title="Service Date"/>
    <date name="billingDate" title="Billing Date"/>
    <decimal name="totalAmountBilled" title="Total Amount Billed"/>
    <decimal name="amountPaidByInsurance" title="Amount Paid by Insurance"/>
    <decimal name="amountPaidByPatient" title="Amount Paid by Patient"/>
    <decimal name="amountDueByPatient" title="Amount Due by Patient"/>
    <date name="paymentDueDate" title="Payment Due Date"/>
    <string name="billingStatus" title="Billing Status"
      selection="healthcare-patient-billing-info-status"/>

    <one-to-many ref="com.axelor.apps.healthcare.db.ProcedureDetails"
      name="procedureDetails" title="Procedure Details" mappedBy="billingInformation"/>

    <many-to-one ref="com.axelor.apps.healthcare.db.Patient" name="patient"
      title="patient"/>
  </entity>

</domain-models>
